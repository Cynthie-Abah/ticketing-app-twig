{% extends "home.twig" %}

{% block content %}
  {% if loading %}
    <div class="h-screen flex justify-center items-center">
      <div class="loader">Loading...</div>
    </div>
  {% else %}
    <div class="min-h-screen w-full bg-gradient-to-br from-gray-50 to-blue-50 overflow-y-scroll">
      <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="mb-8">
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">Dashboard</h1>
          <p class="text-gray-600">Welcome back! Here's an overview of your tickets.</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
          {% include "components/stat-card.twig" with {
            icon: "ticket",
            title: "Total Tickets",
            value: totalTickets,
            bgColor: "bg-blue-50",
            borderColor: "border-blue-200",
            color: "text-blue-600"
          } %}
          
          {% include "components/stat-card.twig" with {
            icon: "clock",
            title: "Open Tickets",
            value: openTickets,
            bgColor: "bg-green-50",
            borderColor: "border-green-200",
            color: "text-green-600"
          } %}

          {% include "components/stat-card.twig" with {
            icon: "trending-up",
            title: "In Progress",
            value: inProgressTickets,
            bgColor: "bg-amber-50",
            borderColor: "border-amber-200",
            color: "text-amber-600"
          } %}

          {% include "components/stat-card.twig" with {
            icon: "check-circle",
            title: "Resolved",
            value: closedTickets,
            bgColor: "bg-gray-50",
            borderColor: "border-gray-200",
            color: "text-gray-600"
          } %}
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-100">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Quick Actions</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <a href="/dashboard/tickets" class="group bg-gradient-to-br from-blue-500 to-blue-700 text-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all hover:scale-105">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="text-xl font-bold mb-2">Manage Tickets</h3>
                  <p class="text-blue-100">View, create, edit, and delete tickets</p>
                </div>
                <i class="icon-arrow-right w-6 h-6 group-hover:translate-x-1 transition-transform"></i>
              </div>
            </a>

            <a href="/dashboard/tickets?action=create" class="group bg-gradient-to-br from-green-500 to-green-700 text-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all hover:scale-105">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="text-xl font-bold mb-2">Create New Ticket</h3>
                  <p class="text-green-100">Start tracking a new issue</p>
                </div>
                <i class="icon-arrow-right w-6 h-6 group-hover:translate-x-1 transition-transform"></i>
              </div>
            </a>
          </div>
        </div>

        <div class="mt-12 bg-white rounded-2xl shadow-lg p-8 border border-gray-100">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Tickets</h2>

          <div class="space-y-4">
            {% for ticket in recentTickets %}
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900">{{ ticket.title }}</h3>
                  <p class="text-sm text-gray-600">{{ ticket.created_at|date("M d, Y") }}</p>
                </div>
                {% set statusClass = 
                  ticket.status == 'open' ? 'bg-green-100 text-green-800' :
                  (ticket.status == 'in_progress' ? 'bg-amber-100 text-amber-800' : 'bg-gray-100 text-gray-800')
                %}
                <span class="px-3 py-1 rounded-full text-sm font-medium {{ statusClass }}">
                  {{ ticket.status|replace({'_': ' '}) }}
                </span>
              </div>
            {% endfor %}
          </div>

          <a href="/dashboard/tickets" class="mt-6 inline-block text-blue-600 hover:text-blue-700 font-semibold">
            View all tickets â†’
          </a>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}
